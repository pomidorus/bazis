<!-- Форма загрузки файлов -->

<section class="modal hide upload_modal" id="myModal">

  <div class="modal-header">
    <h4>Новый файл выписок</h4>
  </div>

  <%= form_tag 'vpfiles/upload', :multipart => true do %>

  <div class="modal-body">
    <p>Вы можете добавить файл в формате R28 (архив)</p>

        <span id="fic"  class="file_input_cont">
          <%= file_field_tag :file, :id => 'file_input_id', :class => 'file_input', :tabindex => "-1" %>
          <a id="upload_file_link" class="b_link">Выберите файл с компьютера...</a>
        </span>

        <section id="fic_true">
          <div id="fileR28">
            <div id="fileR28Name">OFU-3012.R28</div>
            <div id="fileR28Data" style="font-size: 0.85em;"><span id="fday">30</span>&nbsp;<span id="fmonth">декабря</span>&nbsp;<a href="#">2012</a> года</div>
            <%= text_field_tag :file_data, 'test', {:id => 'tft-1'} %>
          </div>
        </section>

  </div>

  <div class="modal-footer" style="display: -webkit-box; -webkit-box-align: center;">
    <div class="flex"></div>
    <div id="b_gotovo" style="display: none;">
      <%= submit_tag 'Upload', :class => 'btn btn-primary' %>
      <!--div class="btn btn-primary" data-dismiss="modal">Готово</div-->
      <span style="margin: 0px 10px;">или</span>
    </div>
    <a href="#" id="b_cancel_link" class="btnq" data-dismiss="modal"><span class="b_link_border">Отменить</span></a>
  </div>

  <% end %>

</section>