
<section style="background-color: #e6e8e6; display: -webkit-box; padding: 17px 16px; -webkit-box-align: center;">
  <div style="background-color: white; margin: 0 16px;">
    <div style="height: 5px; background-color: red;"></div>
    <div style="padding: 0 11px;">
      <div style="font-size: 1.3em; font-weight: bold; text-align: center;"><%= @vipiska.day %></div>
      <div style="text-align: center;"><%= @vipiska.month_short %></div>
      <div style="text-align: center; font-size: 0.8em;"><%= @vipiska.year %></div>
    </div>
  </div>
  <div style="margin-right: 160px; display: inherit;">
    <header style="font-size: 30px; margin-right: 8px;">Платежи</header>
    <div id="count"><span class="label"><%= @plategi_count %></span></div>
  </div>
  <div><a class="btn" href="#"><span id="add" style="font-size: 0.9em;">Загрузить</span></a></div>
</section>


<section style="background-color: #f5f7f5; display: -webkit-box; padding: 32px 48px;">
  <div style="margin-right: 80px;">
    <div style="font-size: 12px; color: #aaaaaa; ">Код платежа</div>
    <% if @code == "1" %>
      <div style="font-size:24px; margin: 5px 0px;">13 050 200</div>
      <div style="font-size:12px;">Аренда земельного участка</div>
    <% end %>
    <% if @code == "2" %>
      <div style="font-size:24px; margin: 5px 0px;">13 050 300</div>
      <div style="font-size:12px;">Земельный налог</div>
    <% end %>
  </div>
  <div>
    <div style="font-size: 12px; color: #aaaaaa; ">Сумма</div>
    <div style="font-size:24px; margin: 5px 0px;"><%= @plategi_summa %></div>
  </div>
</section>


<section style="padding: 32px 48px;">

  <div style="margin-bottom: 16px;">
   <div style="font-size:18px; text-decoration: underline; margin-bottom: 24px; color: blue;">Все платежи</div>
   <div style="font-size:24px; margin: 8px 0px; font-weight: bold;">Платежи за <%= @vipiska.file_data %></div>
  </div>

  <div>
    <nav style="display: -webkit-box; font-size: 14px; color: blue; padding: 5px 10px;">
     <div style="text-decoration: underline; margin-right: 16px;">Неразнесенные<span style="text-decoration: none;"> 3</span></div>
     <div style="text-decoration: underline; margin-right: 16px;">Разнесенные<span> 3</span></div>
     <div style="text-decoration: underline;">Отсев<span> 3</span></div>
    </nav>

    <% @plategi.each do |plateg| %>
    <section style="display: -webkit-box;">
        <div style="width: 576px; background-color:#e9e9e9; margin-bottom: 16px;">
          <div style="display: -webkit-box; padding: 14px 16px; border-bottom: 1px #555555 dashed;">
            <div style="font-size: 18px; width: 288px;">
              <div style="margin-bottom: 4px;"><%= plateg.platnik_name %></div>
              <div style="color: #888888; font-size: 0.8em;"><%= plateg.platnik %></div>
            </div>
            <div style="width: 128px;">Август</div>
            <div style="font-size: 16px; font-weight: bold;"><%= plateg.summa_to_text %></div>
          </div>
          <div style="display: -webkit-box; padding: 14px 16px; color: #888888;">
            <div style="margin-right: 24px;"><%= plateg.bank %></div>
            <div style="width: 340px;"><%= plateg.comment %></div>
          </div>
        </div>

        <div style="width: 420px; font-size: 10px; margin-left: 32px;">
          <code style="border: none; color: #444444; background-color: #ffffff;">
            <%= plateg.content.html_safe %>
            <br />
            dd
          </code>
        </div>
    </section>
    <% end %>


  </div>

</section>